<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_widgets_margin"
        android:layout_marginLeft="@dimen/fragment_widgets_margin"
        android:layout_marginTop="@dimen/fragment_widgets_margin"
        android:layout_marginEnd="@dimen/fragment_widgets_margin"
        android:layout_marginRight="@dimen/fragment_widgets_margin"
        android:layout_marginBottom="@dimen/fragment_widgets_margin"
        android:text="@string/button_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_a_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_widgets_margin"
        android:layout_marginBottom="@dimen/fragment_widgets_margin"
        android:text="@string/fragment_a_label"
        android:textSize="@dimen/text_size"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
